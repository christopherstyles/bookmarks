<nav class="bg-white py-6 px-10 flex justify-between items-center">
  <div class="flex gap-6">
    <%= link_to root_url do %>
      Home
    <% end %>
    <div>
      <%= link_to 'New Bookmark', new_bookmark_path %>
    </div>
  </div>
  <div class="flex items-center gap-8">
    <% if user_signed_in? %>
      <div class="min-w-[350px]">
        <%= form_tag(search_bookmarks_path, method: :get, class: "flex items-center gap-1 w-full") do %>
          <div class="w-full sm:max-w-xs">
            <label for="search" class="sr-only">Search</label>
            <div class="relative">
              <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <%= search_field_tag :q, params[:query], autocorrect: 'off', autocomplete: 'off', autocapitalize: 'none', class: "block w-full rounded-full border-0 bg-white py-1.5 pl-10 pr-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "Search" %>
            </div>
          </div>
          <button type="submit" class="bg-gray-100 rounded-full text-gray-900 p-2 text-base cursor-pointer">
            <%= feather_icon('search', width: '18', height: '18', class: 'text-gray-600') %>
          </button>
        <% end %>
      </div>
      <div>
        <%= link_to 'Profile', edit_user_registration_path %>
      </div>
      <div>
        <%= button_to "Logout", destroy_user_session_path, method: :delete %>
      </div>
    <% else %>
      <%= link_to 'Login', new_user_session_path %>
    <% end %>
  </div>
</nav>
